= form_for @workout do |f|
  - if @workout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout.errors.count, "error")} prohibited this workout from being saved:"
      %ul
        - @workout.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :workout_date
    = f.date_select :workout_date
  .form-group
    = f.label :time_started
    = f.time_select :time_started
  .form-group
    = f.label :time_ended
    = f.time_select :time_ended
  .form-group
    = f.label :split_name
    = f.text_field :split_name
  .form-group
    = f.label :notes
    = f.text_area :notes
  .actions
    -#= f.submit 'Save'
    = button_tag 'Save', :class => 'btn btn-default'
